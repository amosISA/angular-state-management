{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../../dist/apps/typescript/redux-plain",
    "module": "es6",
    "types": ["node"],
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"]
}
